{
  "name": "quick-gist",
  "displayName": "QuickGist",
  "description": "It generates the gists for the active file or selected portion and generates a small url for that.",
  "version": "1.0.0",
  "publisher": "happys1ngh",
  "icon": "images/icon.png",
  "pricing": "Free",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HAPPYS1NGH/quick-gist/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HAPPYS1NGH/quick-gist"
  },
  "author": {
    "name": "Harpreet Singh",
    "url": "https://github.com/happys1ngh"
  },
  "keywords": [
    "Gist",
    "quick-gist",
    "QuickGist",
    "Quick Gist",
    "Fast Gist",
    "Short URL",
    "GitHub",
    "Share",
    "Code Sharing",
    "Publish",
    "Code Snippets",
    "File Sharing",
    "Collaborate"
  ],
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "QuickGist.publishFile",
        "title": "Create Gist File",
        "category": "QuickGist"
      },
      {
        "command": "QuickGist.publishSelection",
        "title": "Create Gist for Selection",
        "category": "QuickGist"
      },
      {
        "command": "QuickGist.shortenAndPublishFile",
        "title": "Generate Short Gist URL for File",
        "category": "QuickGist"
      },
      {
        "command": "QuickGist.shortenAndPublishSelection",
        "title": "Generate Short Gist URL for Selectio",
        "category": "QuickGist"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "QuickGist.publishFile",
          "group": "1_modification"
        },
        {
          "when": "editorTextFocus",
          "command": "QuickGist.shortenAndPublishFile",
          "group": "1_modification"
        },
        {
          "when": "editorHasSelection",
          "command": "QuickGist.publishSelection",
          "group": "1_modification"
        },
        {
          "when": "editorHasSelection",
          "command": "QuickGist.shortenAndPublishSelection",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5"
  }
}
